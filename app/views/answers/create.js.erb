$('.alert').html("<%= flash['alert'] %>")
$('.notice').html("<%= flash['notice'] %>")
$('.answer-errors').html("<%= render 'shared/errors', resource: @answer %>");

<% if @answer.persisted? %>
  $('.answers').html('<%= j render 'answers/best_answer', resource: @best_answer.first %>' + '<%= j render 'answers/answer', collection: @other_answers %>');
  $('.new-answer #answer_body').val('');
<% end %>

