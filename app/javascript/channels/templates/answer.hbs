<div id="answer_{{ answer.id }}" class="mt-3">
  <div class="row">
    <div class="col-sm-12">
      <div class="card">
        <div class="card-body">
          <p class="card-text">{{ answer.body }}</p>
          <div>
            <div class="small">vote </div>
            <div class="vote vote-up"><a data-type="json" data-remote="true" rel="nofollow" data-method="patch" href="/answers/{{ answer.id }}/vote_up"><i class="fas fa-caret-up"></i></a></div>
            <div class="vote">
              <div class="rating">0</div>
            </div>
            <div class="vote vote-down">
              <a data-type="json" data-remote="true" rel="nofollow" data-method="patch" href="/answers/{{ answer.id }}/vote_down">
                <i class="fas fa-caret-down"></i>
              </a>
              <div class="vote-cancel small">
                <a data-type="json" data-remote="true" rel="nofollow" data-method="delete" href="/answers/{{ answer.id }}/vote_cancel">cancel</a>
              </div>
            </div>
          </div>
          <div class="text-right"></div>
          <br>
          <div class="text-right">
            <small class="font-italic">created by: {{ this.email }}</small>
            <div class="text-right">
              <small class="font-italic">{{ created_at }}</small>
            </div>
          </div>
          <div class="text-right"><br></div>
          <form class="hidden" id="edit-answer-{{ answer.id }}" enctype="multipart/form-data" action="/answers/{{ answer.id }}" accept-charset="UTF-8" data-remote="true" method="post">
            <input type="hidden" name="_method" value="patch">
            <label for="answer_body">Your answer</label>
            <textarea class="form-control" name="answer[body]" id="answer_body">{{ answer.body }}</textarea>
            <div class="text-right"></div>
            <br>
            <div>
              <br>
              <label for="answer_files">Files</label>
              <input class="form-control-file" multiple="multiple" type="file" name="answer[files][]" id="answer_files">
            </div>
            <br>
            <input type="submit" name="commit" value="Save" class="btn btn-outline-success" data-disable-with="Save">
          </form>
        </div>
      </div>
    </div>
  </div>
</div>
